{% extends 'base.html.twig' %}

{% block title %}Carte bancaire
{% endblock %}

{% block body %}

	<h1>Page des cartes bancaires</h1>

	<div class="m-2">

			<a class="btn btn-success" href="{{path('credit_card_creation')}}">Ajouter</a>
			
		<table class="table">

			<tr class="table-primary">
				<td>Num√©ro carte</td>
				<td>Identifiant carte</td>
				<td>Statut</td>
				<td>Date d'expiration</td>
			</tr>
			{% for creditCard in creditCards %}
				<tr>
					<td>{{creditCard.cardNumber}}</td>
					<td>{{creditCard.cardIdentifier}}</td>
					<td>{{creditCard.status}}</td>
					<td>{{creditCard.validated|date('d-m-Y')}}</td>
				</tr>
			{% endfor %}


		</table>

		<a class="btn btn-success" href="{{path('bank_account')}}">Compte Bancaire</a>

		<a class="btn btn-success" href="{{path('user_user')}}">Listing client</a>

	</div>

{% endblock %}
